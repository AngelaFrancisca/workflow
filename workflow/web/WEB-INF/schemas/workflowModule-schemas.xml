<schema name="activityInformation.GiveProcessInformation" type="module.workflow.activities.GiveProcessInformation">
	<slot name="user" layout="autoComplete" key="label.giveProcess.user"
		bundle="WORKFLOW_RESOURCES">
		<property name="labelField" value="username" />
		<property name="format" value="${presentationName}" />
		<property name="minChars" value="3" />
		<property name="args"
			value="provider=myorg.presentationTier.renderers.autoCompleteProvider.UserAutoComplete" />
		<property name="size" value="40" />
	</slot>
</schema>

<schema name="viewLogs" type="module.workflow.domain.ActivityLog" bundle="WORKFLOW_RESOURCES">
	<slot name="whenOperationWasRan" key="label.whenOperationWasRan"/>
	<slot name="description" key="label.description"/>
	<slot name="activityExecutor.username" key="label.activityExecutor"/>
</schema>

<schema name="addFile"
		type="myorg.util.FileUploadBean"
		bundle="WORKFLOW_RESOURCES">
	<slot name="displayName" key="label.filename">
		<property name="size" value="50"/>
	</slot>
	<slot name="inputStream" key="label.document">
		<property name="fileNameSlot" value="filename" />
		<property name="size" value="50"/>
	</slot>
</schema>